@model AutoPartsStore.Models.Product

<div class="product-card">
    <img src="~/images/@Model.ProductID.jpg" alt="@Model.ProductName" class="product-image" />

    <h3 class="product-title">@Model.ProductName</h3>

    <div class="product-manufacturer">
        Производитель: @Model.Manufacturer
    </div>

    <div class="product-price">
        @Model.Price руб.
    </div>

    <a asp-controller="Products"
       asp-action="Details"
       asp-route-id="@Model.ProductID"
       class="btn-details">
        Подробнее
    </a>

    <form asp-controller="Cart"
          asp-action="Add"
          method="post">
        <input type="hidden" name="productId" value="@Model.ProductID" />
        <button type="submit" class="btn-buy">В корзину</button>
    </form>
</div>
