@model AutoPartsStore.Models.Product

<div class="product-card">
    <img src="@(Model.ImageUrl ?? "/images/no-image.png")" alt="image" />

    <div class="product-card-body">
        <div class="product-title">@Model.ProductName</div>

        <div class="text-muted small">
            @Model.Manufacturer
        </div>

        <div class="product-price">
            @Model.Price руб.
        </div>

        <a href="/Products/Details/@Model.ProductID"
           class="btn btn-primary w-100 mt-3">
            Подробнее
        </a>
    </div>
</div>
