@model AutoPartsStore.Models.Product

@{
    ViewData["Title"] = Model.ProductName;
}

<h2 class="page-title">@Model.ProductName</h2>

<div class="product-details-grid">

    <div class="details-box">
        <div class="details-image">
            Фото отсутствует
        </div>
    </div>

    <div class="details-box">

        <h2>@Model.ProductName</h2>

        <div class="mb-2 text-muted">
            Производитель: <strong>@Model.Manufacturer</strong>
        </div>

        <div class="mb-2 text-muted">
            Категория: <strong>@Model.Category.CategoryName</strong>
        </div>

        <div class="product-price mb-3">
            @Model.Price руб.
        </div>

        <p class="mb-4">
            @Model.Description
        </p>

        <button class="btn btn-success w-100 mt-2"
                onclick="addToCart(@Model.ProductID)">
            В корзину(JS)
        </button>

        <a class="btn btn-primary w-100" href="#">
            Добавить в корзину
        </a>
    </div>

</div>
